        <td class="col-sm-3 r-header">
          
        </td>
     
    </tr>

    
  </table>
 


 <div class="container">
    
  <table>
    <tr >
      <%  counter=0 %>

    <% @pictures.reverse.each do |pic| %>
      
       
        <%counter=counter+=1%>
       
       <td class"col-sm-4">
        
        <%if current_user%>
          <%if pic.user_id==@user.id%>
             <div class="img-outside"> 
              <div class="column" >
                <!-- <a href="/instagrampics/<%=pic.id%>"> -->
