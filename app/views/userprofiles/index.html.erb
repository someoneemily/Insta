<p id="notice"><%= notice %></p>
<div class="profile">
<%if @userprofiles.size>0%>

   <tbody>
    <% @userprofiles.each do |userprofile| %>
      <tr class="row">
        <td class="col-md-3"><img src="<%= userprofile.profilepic %>"class ="img-circle" height="100" width="100"></td>
        <td class="col-md-3"><h3><%= userprofile.name %></h3></td>
         <td class="col-md-2">Description: <%= userprofile.description %></td>
         <td class="col-md-2"><strong><%= userprofile.followers %></strong>followers</td>
        <td class = "col-md-2"><strong><%= userprofile.following %></strong>following</td>
        
       
        
        
        <td><%= link_to 'Show', userprofile %></td>
        <td><%= link_to 'Edit', edit_userprofile_path(userprofile) %></td>
        <td><%= link_to 'Destroy', userprofile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>

<%else%>
<h3><label class="text-Danger">No user currently signed in</label></h3>
<%= link_to 'New Userprofile', new_userprofile_path %>
<%end%>
